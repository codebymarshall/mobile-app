<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.vacationtracker.mobile_app">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.mobile_app"
        tools:targetApi="31">

        <activity
            android:name=".ui.ExcursionList"
            android:exported="false"
            android:label="Excursion List"
            android:parentActivityName=".ui.MainActivity"/>

        <activity
            android:name=".ui.ExcursionDetails"
            android:exported="false"
            android:label="Excursion Details List"
            android:parentActivityName=".ui.VacationDetails" />
        <activity
            android:name=".ui.VacationDetails"
            android:exported="false"
            android:label="Vacation Details"
            android:parentActivityName=".ui.VacationList" />
        <activity
            android:name=".ui.VacationList"
            android:exported="false"
            android:label="Vacation List"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="Vacation Application">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>