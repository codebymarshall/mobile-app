<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.mobile_app" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorOnSecondary">@color/accent</item>
        
        <!-- Text colors -->
        <item name="android:textColor">@color/Primary</item>
        <item name="android:textColorPrimary">@color/Primary</item>
        <item name="android:textColorSecondary">@color/accent</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/accent</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Button colors -->
        <item name="colorButtonNormal">@color/Secondary</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Custom border style -->
    <style name="BorderedItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/Primary</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/Secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>